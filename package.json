  "private": true,
  "license": "PRIVATE",
  "scripts": {
    "clear:jest": "jest --clearCache",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/{*.ts,*.tsx}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration:base": "cross-env TYPEORM_DATABASE=taskmanagement_test jest --config ./jest.integration.config.js",
    "test:integration": "yarn db:create:schema:test; sleep 5; yarn db:migration:run:test; yarn test:integration:base; yarn db:drop:schema:test",
    "typeorm-cli": "ts-node --project tsconfig.json -r tsconfig-paths/register node_modules/.bin/typeorm --config ormconfig.env",
    "db:create:schema": "cross-env TYPEORM_DATABASE=postgres yarn run typeorm-cli query 'CREATE DATABASE taskmanagement;'",
    "db:drop:schema": "cross-env TYPEORM_DATABASE=postgres yarn run typeorm-cli query 'DROP DATABASE taskmanagement;'",
    "db:create:schema:test": "cross-env TYPEORM_DATABASE=postgres yarn run typeorm-cli query 'CREATE DATABASE taskmanagement_test;'",
    "db:drop:schema:test": "cross-env TYPEORM_DATABASE=postgres yarn run typeorm-cli query 'DROP DATABASE taskmanagement_test;'",
    "db:migration:generate": "yarn run typeorm-cli migration:generate -n",
    "db:migration:run": "yarn run typeorm-cli migration:run",
    "db:migration:run:test": "cross-env TYPEORM_DATABASE=taskmanagement_test yarn db:migration:run",
    "db:migration:revert": "yarn run typeorm-cli migration:revert",
    "db:sync": "yarn run typeorm-cli schema:sync"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
